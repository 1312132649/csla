<UserControl x:Class="DataBinding.Test.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <UserControl.Resources>
        <DataTemplate x:Key="customer">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="id" HorizontalAlignment="Center" Width="25" Text="{Binding Id}"/>
                <TextBox x:Name="name" Width="100" Text="{Binding Name}" Grid.Column="1"/>
                <TextBox x:Name="birthdate" Width="150" Text="{Binding BirthDate}" Grid.Column="2" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListBox ItemTemplate="{StaticResource customer}" ItemsSource="{Binding}" HorizontalContentAlignment="Stretch" />
        <Button Grid.Row="1" x:Name="fetch" Content="fetch" Click="fetch_Click"/>
    </Grid>
</UserControl>
