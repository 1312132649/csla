<UserControl x:Class="DataBinding.Test.Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:csla="clr-namespace:Csla.Silverlight;assembly=Csla"
             xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows"
             xmlns:c="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
             xmlns:System="clr-namespace:System;assembly=mscorlib">
            
    <UserControl.Resources>
        <DataTemplate x:Key="customer">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="id" HorizontalAlignment="Center" Width="25" Text="{Binding Id}"/>
                <TextBlock x:Name="name" Width="100" Text="{Binding Name}" Grid.Column="1"/>
                <TextBlock x:Name="birthdate" Width="150" Text="{Binding BirthDate}" Grid.Column="2" />
            </Grid>
        </DataTemplate>
        <ControlTemplate x:Key="details" TargetType="csla:ObjectStatus" >
            <Grid>
                <vsm:VisualStateManager.VisualStateGroups>
                    <vsm:VisualStateGroup x:Name="CanGet">
                        <vsm:VisualState x:Name="AllowGet">
                            <Storyboard />
                        </vsm:VisualState>
                        <vsm:VisualState x:Name="DenyGet" >
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="canGet"
                                                               Storyboard.TargetProperty="Visibility"
                                                               Duration="0">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <Visibility>Collapsed</Visibility>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="denyGet"
                                                               Storyboard.TargetProperty="Visibility"
                                                               Duration="0">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <Visibility>Visible</Visibility>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </vsm:VisualState>
                    </vsm:VisualStateGroup>
                    <vsm:VisualStateGroup x:Name="CanEdit">
                        <vsm:VisualState x:Name="AllowEdit">
                            <Storyboard />
                        </vsm:VisualState>
                        <vsm:VisualState x:Name="DenyEdit">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="btnSave"
                                                               Storyboard.TargetProperty="Visibility"
                                                               Duration="0">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <Visibility>Collapsed</Visibility>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </vsm:VisualState>
                    </vsm:VisualStateGroup>
                    <vsm:VisualStateGroup x:Name="CanDelete">
                        <vsm:VisualState x:Name="AllowDelete">
                            <Storyboard />
                        </vsm:VisualState>
                        <vsm:VisualState x:Name="DenyDelete">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="btnDelete"
                                                               Storyboard.TargetProperty="Visibility"
                                                               Duration="0">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <Visibility>Collapsed</Visibility>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </vsm:VisualState>
                    </vsm:VisualStateGroup>
                    <vsm:VisualStateGroup x:Name="IsBusy">
                        <vsm:VisualState x:Name="Busy">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="objectBusy"
                                                               Storyboard.TargetProperty="IsRunning"
                                                               Duration="0">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="True" />
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </vsm:VisualState>
                        <vsm:VisualState x:Name="Idle">
                            <Storyboard />
                        </vsm:VisualState>
                    </vsm:VisualStateGroup>
                </vsm:VisualStateManager.VisualStateGroups>

                <Grid Width="700" Height="300" x:Name="canGet">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="300" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Id" />
                    <TextBlock Grid.Column="1" Text="{Binding Id}" />
                    
                    <TextBlock Text="Name" Grid.Row="1" />
                    <TextBox x:Name="txtName" Grid.Column="1" Grid.Row="1" Text="{Binding Name, Mode=TwoWay}" />
                    <csla:PropertyStatus Property="Name" RelativeTargetName="txtName" Source="{Binding}" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" />
                                    
                    <TextBlock Text="Birthdate" Grid.Row="2" />
                    <TextBox x:Name="txtBirthdate" BorderThickness="2" Grid.Column="1" Grid.Row="2" Text="{Binding BirthDate, Mode=TwoWay}" />
                    <csla:PropertyStatus Property="BirthDate" RelativeTargetName="txtBirthdate" Source="{Binding}" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" />
                    
                    <c:DataGrid ItemsSource="{Binding Addresses}" 
                                AutoGenerateColumns="False"
                                Grid.Column="3" 
                                Grid.RowSpan="4" 
                                VerticalAlignment="Stretch" 
                                HorizontalAlignment="Stretch">
                        <c:DataGrid.Columns>
                            <csla:ValidatedDataGridTextColumn Binding="{Binding City}" />
                            <csla:ValidatedDataGridTextColumn Binding="{Binding State}" />
                        </c:DataGrid.Columns>
                    </c:DataGrid>
                    
                    <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
                        <Button Content="Save" Margin="2,2,2,2" x:Name="btnSave" IsEnabled="{Binding IsSavable}" />
                        <Button Content="Delete" Margin="2,2,2,2" x:Name="btnDelete" />
                        <csla:BusyAnimation x:Name="objectBusy" />
                    </StackPanel>
                </Grid>
                <Grid Width="400" Height="300" x:Name="denyGet" Visibility="Collapsed">
                    <TextBlock Foreground="Red" Text="You are unauthorized to view this data" />
                </Grid>
            </Grid>
        </ControlTemplate>
    </UserControl.Resources>
    <StackPanel x:Name="LayoutRoot"  Orientation="Horizontal">
        <Grid Background="White" Width="400" Height="300">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <ListBox x:Name="list" 
                     SelectionChanged="ListBox_SelectionChanged" 
                     ItemTemplate="{StaticResource customer}" 
                     ItemsSource="{Binding}" 
                     HorizontalContentAlignment="Stretch" />
            <csla:BusyAnimation x:Name="busy"
                                Foreground="#7743a71f"
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" 
                                Width="64" 
                                Height="64" />
            <StackPanel Orientation="Horizontal" Grid.Row="2">
                <Button Content="Run as Administrator" x:Name="btnAdmin" Click="btnAdmin_Click"/>
                <Button Content="Run as User" x:Name="btnUser" Click="btnUser_Click" />
                <Button Content="Run as Guest" x:Name="btnGuest" Click="btnGuest_Click" />
                <Button Content="Logout" x:Name="btnLogout" Click="btnLogout_Click" />
            </StackPanel>
        </Grid>
        <csla:ObjectStatus x:Name="details" Source="{Binding}" Template="{StaticResource details}" />
    </StackPanel>
</UserControl>
