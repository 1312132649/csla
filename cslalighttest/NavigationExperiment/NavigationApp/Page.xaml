<UserControl x:Class="NavigationApp.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:local="clr-namespace:NavigationApp"
    Width="400" Height="300">
  <UserControl.Resources>
    <local:NavigatorProvider x:Key="NavProvider"/>
  </UserControl.Resources>
  <Grid x:Name="LayoutRoot" Background="LightBlue">
    <StackPanel Orientation="Vertical">
      <StackPanel Orientation="Horizontal" Height="30">
        <Button x:Name="LaunchControlOne" Content="Control One"
          local:NavigatorProvider.ControlTypeName="NavigationApp.ControlOne, NavigationApp, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null"
          local:NavigatorProvider.NavigatorProvider="{StaticResource NavProvider}"
          local:NavigatorProvider.TriggerEvent="Click"
        />
        <Button x:Name="LaunchControlTwo" Content="Control Two" 
          local:NavigatorProvider.ControlTypeName="NavigationApp.ControlTwo, NavigationApp, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null"
          local:NavigatorProvider.NavigatorProvider="{StaticResource NavProvider}"
          local:NavigatorProvider.TriggerEvent="Click"
        />
      </StackPanel>
      <ContentControl x:Name="PlaceHolder">
      </ContentControl>
    </StackPanel>


  </Grid>
</UserControl>
