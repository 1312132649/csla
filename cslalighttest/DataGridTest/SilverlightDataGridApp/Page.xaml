<UserControl x:Class="SilverlightDataGridApp.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:gridControl="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
    xmlns:thread="clr-namespace:System.Windows.Threading;assembly=System.Windows"
    Width="400" Height="300" Loaded="UserControl_Loaded">
    <Grid x:Name="LayoutRoot" Background="White">
    <Grid.RowDefinitions>
      <RowDefinition Height="25"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <StackPanel Orientation="Horizontal">
      <Button x:Name="Login" Content="Login Successfully" Click="Login_Click"/>
      <Button x:Name="LoginFail" Content="Login Unsuccessfully" Click="LoginFail_Click"/>
      <TextBlock x:Name="LoginStatus" Text="Not Logged In" Grid.Row="0" Visibility="Visible"/> 
    </StackPanel>

    <gridControl:DataGrid x:Name="ItemsGrid" Visibility="Collapsed" AutoGenerateColumns="True" CurrentCellChanged="ItemsGrid_SelectionChanged" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" Grid.Row="1" Margin="7,7,7,7"   BeginningEdit="ItemsGrid_BeginningEdit" CancelingEdit="ItemsGrid_CancelingEdit" SelectionChanged="ItemsGrid_SelectionChanged" CommittingEdit="ItemsGrid_CommittingEdit" KeyDown="ItemsGrid_KeyDown">
    </gridControl:DataGrid>
  </Grid>
</UserControl>
