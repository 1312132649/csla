<Window x:Class="Example.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cc="clr-namespace:Example"
        xmlns:csla="clr-namespace:Csla.Wpf;assembly=Csla"
        Title="Window1" Height="250" Width="250"
        Loaded="Window_Loaded">
    <StackPanel>
        <TextBlock Text="Enter the values 'Error', 'Warning' or 'Information' to get an invalid state"
                   TextWrapping="Wrap" />
        <TextBox x:Name="txtData" Text="{Binding Path=Data, Mode=TwoWay}" />
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Default:" Margin="2,2,2,2" />
            <csla:PropertyStatus Property="{Binding Path=Data}"
                                 Margin="2,2,2,2"
                                 TargetControl="{Binding ElementName=txtData}" />  
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Custom:" Margin="2,2,2,2" />
            <csla:PropertyStatus Width="Auto"
                                 Property="{Binding Path=Data}"
                                 Margin="2,2,2,2"
								                 Style="{DynamicResource AdvancedPropertyStatusTemplate}" />
        </StackPanel>
        <Button>Save</Button>
    </StackPanel>
</Window>
