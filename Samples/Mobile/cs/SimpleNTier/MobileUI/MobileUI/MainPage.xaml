<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="MobileUI.MainPage">
  <Page.ToolbarItems>
    <ToolbarItem Name="Save" x:Name="SaveItem"/>
  </Page.ToolbarItems>
  <StackLayout Orientation="Vertical">
    <Label Text="CUSTOMERS" Font="24"/>
    <Label Text="Id" Font="Large"/>
    <Editor x:Name="idtext" Text="{Binding Id}" VerticalOptions="FillAndExpand"/>
    <Label Text="Name" Font="Large"/>
    <Editor x:Name="nametext" Text="{Binding CustomerName}" VerticalOptions="FillAndExpand"/>
  </StackLayout>
</ContentPage>