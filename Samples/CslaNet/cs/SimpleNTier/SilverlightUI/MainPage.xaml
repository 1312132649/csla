<UserControl x:Class="SilverlightUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="clr-namespace:SilverlightUI"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
  <UserControl.Resources>
    <my:MainWindowPresenter x:Key="Presenter"/>
  </UserControl.Resources>
  <Grid DataContext="{StaticResource Presenter}">
    <ContentControl Name="contentControl1" Content="{Binding Path=MainContent}" />
  </Grid>
</UserControl>
