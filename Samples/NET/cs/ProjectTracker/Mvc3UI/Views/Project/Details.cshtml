@model ProjectTracker.Library.ProjectEdit

@{
    ViewBag.Title = "Project details";
}

<h2>Details</h2>

<fieldset>
    <legend>ProjectEdit</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Started</div>
    @if (Model.Started.HasValue) {
    <div class="display-field">@String.Format("{0:g}", Model.Started)</div>
    } else {
      <div class="display-field">none</div>
    }

    <div class="display-label">Ended</div>
    @if (Model.Ended.HasValue)
    {
      <div class="display-field">@String.Format("{0:g}", Model.Ended)</div>
    }
    else
    {
      <div class="display-field">none</div>
    }

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

