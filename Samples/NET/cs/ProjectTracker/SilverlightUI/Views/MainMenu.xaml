<UserControl x:Class="SilverlightUI.Views.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" xmlns:bxf="clr-namespace:Bxf.Xaml;assembly=Bxf" xmlns:my="clr-namespace:SilverlightUI.ViewModels"
    d:DesignHeight="300" d:DesignWidth="400">
  <UserControl.Resources>
    <my:MainMenu x:Key="viewmodel"/>
  </UserControl.Resources>
  <Grid DataContext="{StaticResource viewmodel}">
    <Grid.Background>
      <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="Black" Offset="0" />
        <GradientStop Color="White" Offset="1" />
      </LinearGradientBrush>
    </Grid.Background>
    <StackPanel Margin="5">
      <Button Margin="3" Content="Project List" Name="ProjectListButton"/>
      <Button Margin="3" Content="Resource List" Name="ResourceListButton"/>
    </StackPanel>
    <bxf:TriggerAction TargetControl="{Binding ElementName=ProjectListButton}"
                       MethodName="ShowProjectList"/>
    <bxf:TriggerAction TargetControl="{Binding ElementName=ResourceListButton}"
                       MethodName="ShowResourceList"/>
  </Grid>
</UserControl>
