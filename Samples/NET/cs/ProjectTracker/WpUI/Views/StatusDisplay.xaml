<UserControl x:Class="WpUI.Views.StatusDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
  <UserControl.Resources>
    <CollectionViewSource x:Key="statusViewSource"/>
  </UserControl.Resources>
  <Grid x:Name="LayoutRoot">
    <Canvas Background="SkyBlue" Opacity=".5"/>
    <StackPanel HorizontalAlignment="Left"
                VerticalAlignment="Center"
                DataContext="{StaticResource statusViewSource}">
      <TextBlock Margin="5" Text="Status: " FontWeight="Bold" />
      <TextBlock Margin="5" Text="{Binding Path=Text}" TextWrapping="Wrap"/>
      <TextBlock Margin="5" Text="Busy: " FontWeight="Bold" />
      <TextBlock Margin="5" Text="{Binding Path=IsBusy}"/>
      <TextBlock Margin="5" Text="OK: " FontWeight="Bold" />
      <TextBlock Margin="5" Text="{Binding Path=IsOk}"/>
    </StackPanel>
  </Grid>
</UserControl>
