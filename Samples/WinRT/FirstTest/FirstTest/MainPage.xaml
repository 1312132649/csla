<UserControl x:Class="FirstTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="768" d:DesignWidth="1366"
             Loaded="UserControl_Loaded">

    <Grid x:Name="LayoutRoot" Background="#FF0C0C0C">
        <StackPanel>
            <TextBlock Text="Hello world" FontSize="20" Margin="5" Name="Label1"/>
            <TextBox Text="{Binding Path=Name, Mode=TwoWay}" FontSize="20" Margin="5" MinWidth="200" HorizontalAlignment="Left"/>
            <TextBox Text="{Binding Path=Name, Mode=TwoWay}" FontSize="20" Margin="5" MinWidth="200" HorizontalAlignment="Left"/>
            <Button Content="Save" Margin="5" Click="Button_Click"/>
        </StackPanel>
    </Grid>
    
</UserControl>