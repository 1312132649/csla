<UserControl x:Class="SilverlightSOA.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:csla="clr-namespace:Csla.Xaml;assembly=Csla.Xaml"
    xmlns:l="clr-namespace:SilverlightSOA"
    Width="400" Height="300"
    FontFamily="Verdana"
    FontSize="16"
    Background="Blue">
  <UserControl.Resources>
    <l:VisibilityConverter x:Key="VisibilityConverter" />
    <!--<csla:CslaDataProvider x:Key="MyData"
                           ManageObjectLifetime="True"
                           IsInitialLoadEnabled="True"
                           ObjectType="SilverlightSOA.Person, SilverlightSOA, Version=..., Culture=neutral, PublicKeyToken=null"
                           FactoryMethod="NewPerson" />-->
    <csla:CslaDataProvider x:Key="MyData"
                           DataChanged="CslaDataProvider_DataChanged"
                           ManageObjectLifetime="True"
                           IsInitialLoadEnabled="True"
                           ObjectType="SilverlightSOA.Person, SilverlightSOA, Version=..., Culture=neutral, PublicKeyToken=null"
                           FactoryMethod="GetPerson">
      <csla:CslaDataProvider.FactoryParameters>
        <system:Int32>567</system:Int32>
      </csla:CslaDataProvider.FactoryParameters>
    </csla:CslaDataProvider>
  </UserControl.Resources>
  <Grid x:Name="LayoutRoot" DataContext="{Binding Source={StaticResource MyData}, Path=Data}" Background="Beige">
    <StackPanel Margin="10">
      <TextBox Text="{Binding Id, Mode=TwoWay}" Margin="5" FontSize="16" Width="250" HorizontalAlignment="Left" />
      <StackPanel Orientation="Horizontal">
        <TextBox Text="{Binding FirstName, Mode=TwoWay}"  Margin="5" FontSize="16" Width="250" />
        <csla:PropertyStatus Property="{Binding Path=FirstName}" />
      </StackPanel>
      <StackPanel Orientation="Horizontal">
        <TextBox Text="{Binding LastName, Mode=TwoWay}" Margin="5" FontSize="16" Width="250" />
        <csla:PropertyStatus Property="{Binding Path=LastName}" />
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="5">
        <Button HorizontalAlignment="Left" Margin="5,5,5,5" Name="SaveButton" Content="Save" />
        <csla:TriggerAction TargetControl="{Binding ElementName=SaveButton}" MethodName="Save" DataContext="{Binding Source={StaticResource MyData}}"/>
        <Button HorizontalAlignment="Left" Margin="5,5,5,5" Name="CancelButton" Content="Cancel" />
        <csla:TriggerAction TargetControl="{Binding ElementName=CancelButton}" MethodName="Cancel" DataContext="{Binding Source={StaticResource MyData}}"/>
        <Button HorizontalAlignment="Left" Margin="5,5,5,5" Name="DeleteButton" Content="Mark for Delete" />
        <csla:TriggerAction TargetControl="{Binding ElementName=DeleteButton}" MethodName="Delete" DataContext="{Binding Source={StaticResource MyData}}"/>
        <csla:BusyAnimation IsRunning="{Binding Source={StaticResource MyData}, Path=IsBusy}" Margin="10,0,0,0" Height="20" Width="20" />
      </StackPanel>
    </StackPanel>
    <Canvas Background="Black" 
            Opacity="0" 
            Visibility="{Binding Source={StaticResource MyData}, Path=IsBusy, Converter={StaticResource VisibilityConverter}}" />
  </Grid>
</UserControl>
